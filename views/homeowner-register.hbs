<div class="header clearfix">
  {{> page/nav-homeowners}}
  <h3 class="text-muted">Rates and Agents</h3>
</div>
{{> page/errors}}
{{> page/success}}
<h2 class="page-header">Homeowner Registration</h2>
<form method="post" action="/homeowners/register">
  <div class="form-group">
    <label>Name</label>
    <input type="text" name="name" class="form-control" value="{{#if name}}{{name}}{{/if}}" placeholder="George Homebody">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="email" name="email" class="form-control" value="{{#if email}}{{email}}{{/if}}" placeholder="george-homeowner@gmail.com">
  </div>
   <div class="form-group">
    <label>Username</label>
    <input type="text" name="username" class="form-control" value="{{#if username}}{{username}}{{/if}}" placeholder="george-homeowner">
   </div>
   <div class="form-group">
    <label>Password</label>
    <input type="password" name="password" class="form-control" placeholder="s0meC0mplic4t3dP455w0rd">
  </div>
  <div class="form-group">
    <label>Confirm Password</label>
    <input type="password" name="passwordconfirm" class="form-control" placeholder="s0meC0mplic4t3dP455w0rd">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-default">Submit</button>
  </div>
</form>
